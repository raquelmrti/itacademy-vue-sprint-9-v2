{
  "name": "itacademy-vue-sprint-9",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "css-build": "node-sass --omit-source-map-url src/assets/scss/mystyles.scss src/assets/css/mystyles.css",
    "css-watch": "npm run css-build -- --watch",
    "start": "npm run css-watch"
  },
  "dependencies": {
    "firebase": "^9.23.0",
    "pinia": "^2.1.3",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "bulma": "^0.9.4",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "node-sass": "^9.0.0",
    "prettier": "^2.8.8",
    "vite": "^4.3.9"
  }
}
